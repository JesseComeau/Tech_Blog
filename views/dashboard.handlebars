<section>
    <div class="mb-4">Posts:</div>
        <div class="accordion" id="accordionExample">

            {{#each userData.posts}}
            <div class="accordion-item">
                <p class="visually-hidden" id="postID">{{id}}</p>
                <h2 class="accordion-header" id="heading{{id}}">
                    <button class="accordion-button font-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{id}}" aria-expanded="true" aria-controls="collapse{{id}}">
                        <div>
                            <h5>{{post_title}}</h5>
                            <h6>Posted: {{format_date createdAt}} {{format_time createdAt}}</h6>
                        </div>
                    </button>
                </h2>
                <div id="collapse{{id}}" class="accordion-collapse collapse position-relative" aria-labelledby="heading{{id}}" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{post_message}}
                    </div>
                    <div class="position-absolute top-50 end-0 translate-middle-y mr-4">

                        <button type="button" class="btn btn-info">
                        <a href="/post/{{id}}">
                        View Post
                        </a>
                        </button>

                    </div>
                </div>

            </div>
            {{/each}}


        </div>
    <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary mt-4 justify-content-center" data-bs-toggle="modal" data-bs-target="#addPostModal">
    + New Post
    </button>
    </div>
            {{> new-post}}
</section>
