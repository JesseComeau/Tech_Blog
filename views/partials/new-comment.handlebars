<div class="modal fade" id="addCommentModal" tabindex="-1" aria-labelledby="New Comment" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Comment</h5>
          <div id="postID">{{postData.id}}</div>

          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="addCommentBody" class="form-label">Comment</label>
            <textarea class="form-control" id="commentBody" rows="3"></textarea>
          </div>
        </div>
         <div class="text-danger pl-4 mb-2" id="fieldWarning"></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="saveNewcomment">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/newComment.js"></script>